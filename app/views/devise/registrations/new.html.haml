
%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .row.mt-5
    .col
      .form-group
        = f.email_field :email,
          autofocus: true,
          autocomplete: 'email',
          placeholder: 'Email',
          class: 'form-control'

  .row
    .col
      .form-group
        - if @minimum_password_length
          - minimum_hint = "(#{@minimum_password_length} characters minimum)"
        = f.password_field :password,
          autocomplete: 'off',
          placeholder: "Password #{minimum_hint}".strip,
          class: 'form-control'

  .row
    .col
      .form-group
        = f.password_field :password_confirmation,
          autocomplete: 'off',
          placeholder: 'Password confirmation',
          class: 'form-control'

  .row.mt-3.mb-3
    .col.text-right
      .form-group
        = f.submit 'Sign up',
          class: 'btn btn-primary tk-btn'

.row
  .col.text-right
    = link_to 'Sign in', new_session_path(resource_name)
