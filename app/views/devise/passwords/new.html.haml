%h2 Forgot the key?
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = devise_error_messages!

  .row.mt-5
    .col
      .form-group
        = f.email_field :email,
          autofocus: true,
          autocomplete: 'email',
          placeholder: 'Email',
          class: 'form-control'
  .row.mt-5
    .col.text-right
      .form-group
        .btn-tk
          = f.submit 'Send me new key, please',
            class: 'btn btn-primary'
          .bottom-border

.row
  .col.text-right
    = link_to 'Sign in', new_session_path(resource_name)
.row.mt-4
  .col.text-right
    = link_to 'Create an account', new_registration_path(resource_name)
