- if squad_members.any?
  .squad_members
    - squad_members.each do |squad_member|
      .squad_member.mt-4
        - coach_user = squad_member.squad.coach_member.user
        - if coach_user == current_user
          .row
            .col-12.ci-coach-name
              %small.text-muted You are the coach
        .row
          .col-12.ci-squad-name.squad-name
            = link_to squad_member.squad.name, squad_path(squad_member.squad)
        .row
          .col-12.ci-squad-ranking
            %small
              - ranking = squad_member.ranking_position
              - player_count = SquadMember.accepted.of_squad(squad_member.squad).count
              - if ranking.present?
                = "You are ranked # #{squad_member.ranking_position} out of #{pluralize(player_count, 'player')}"
              - else
                Not ranked (yet)
